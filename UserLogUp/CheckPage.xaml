<Page x:Class="UserLogUp.CheckWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserLogUp"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="CheckWindow" Background="#FFC4D8F0">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition  Height="67*"/>
            <RowDefinition Height="83*"/>
            
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        
        <Image x:Name="userImage" HorizontalAlignment="Right" Height="100" Margin="15,10,15,0" VerticalAlignment="Top" Width="100" Grid.Column="1" OpacityMask="Black"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Right" Margin="0,115,23,0" TextWrapping="Wrap" Text="Выбрать фото" VerticalAlignment="Top"/>

    </Grid>
</Page>
